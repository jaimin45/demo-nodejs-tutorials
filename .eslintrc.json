{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:prettier/recommended", "airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["prettier", "spellcheck"],
    "rules": {
      "quotes": "off",
      "comma-dangle":"off",
      "spellcheck/spell-checker": [2,
        {
            "comments": true,
            "strings": true,
            "identifiers": true,
            "templates": true,
            "lang": "en_US",
            "skipWords": [
                "aff",
                "hunspellchecker",
                "hunspell",
                "utils",
                "yaml",
                "yamljs",
                "urlencoded",
                "_req",
                "req",
                "mongodb",
                "localhost",
                "nodejs",
                "syscall",
                "morgan",
                "timestamps",
                "joi",
                "winston",
                "maxsize",
                "logform",
                "dotenv"
            ],
            "skipIfMatch": [
                "http://[^s]*",
                "^[-\\w]+\/[-\\w\\.]+$"
            ],
            "skipWordIfMatch": [
                "^foobar.*$"
            ],
            "minLength": 3
         }
     ]
    },
    "overrides": [
      {
        "files": ["*.yaml", "*.yml"],
        "parser": "yaml-eslint-parser"
      }
    ]
}
